{% extends 'base.html.twig' %}

{% block title %}Hypnos Mandelieu{% endblock %}

{% block content %}
{% for hotel in hotelMandelieu %}

<div class="carousel-inner">
    <div class="carousel-item active">
        <img class="hotel" src="{{asset('assets/img/Mandelieu/hotel.jpg')}} " alt="">
        <div class="container">
            <div class="carousel-caption">
                <div class='hotel-logo-name'>
                    <img class='logo' src="{{asset('assets/img/Logo_HYPNOS.png')}}" alt="">
                </div>
            </div>
        </div>
    </div>
</div>

<h1 class="text-center">{{hotel.name}}</h1>

<h2 class="text-center">Bienvenu a l'hotel de {{hotel.city}}, située au {{hotel.adress}} à {{hotel.city}}.</h2>

<h3 class="text-center">Notre hotel vous propose différentes suite</h3>

<div class="row mt-5">
{% for rooms in roomMandelieu %}

    <div class="room-item col-6 text-center">
        <h3>{{rooms.name}}</h3>
        <img src="/assets/{{rooms.image}}" alt="" class="img-fluid" style='width:600px ; height:400px'>
        <p class='mt-3'> {{rooms.description}} </p>
        <div>
        <span class='me-3 '>{{(rooms.price / 100) | number_format(2, ',' , '.' )}} € <b> par nuit</b></span>
        </div>
        {% if app.user %}
        <a href=" {{path('mandelieu/app_booking_mandelieu')}} "><button type='button' class='btn btn-primary'>Réserver votre suite</button></a>
        {% else %}
        <div>Pour pouvoir reserver une chambre merci de vous s'incrire avant</div>
        <a href=" {{path('app_register')}} "><button type='button' class='btn btn-primary'>S'incrire</button></a>
        {% endif %}
    </div>

{% endfor %}{% endfor %}
<hr class='mt-3'>
</div>

{% endblock %}
