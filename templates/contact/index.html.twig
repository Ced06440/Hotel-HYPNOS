{% extends 'base.html.twig' %}

{% block title %}Contact - HYPNOS HOTEL{% endblock %}

{% block content %}

<div class="container">
    <div class="text-center"><h1>Inscription à nos hôtels</h1></div>

{% for message in app.flashes('success') %}
    <p>{{ message }}</p>
{% endfor %}

    {{form_start(contactForm)}}

    <div class="row justify-content-center align-items-center text-center">
            {{ form_label(contactForm.firstname)}}
            <input class="form-control" {{form_widget(contactForm.firstname)}}
    </div>

    <div class="row justify-content-center align-items-center text-center">
        {{ form_label(contactForm.lastname)}}
        <input class="form-control"{{form_widget(contactForm.lastname)}}
    </div>

    <div class="row justify-content-center align-items-center text-center">
        {{ form_label(contactForm.email)}}
        <input class="form-control"{{form_widget(contactForm.email)}}
    </div>

    <div class="row justify-content-center align-items-center text-center">
        {{ form_label(contactForm.phoneNumber)}}
        <input class="form-control"{{form_widget(contactForm.phoneNumber)}}
    </div>

    <div class="row justify-content-center align-items-center text-center">
        {{ form_label(contactForm.selection)}}
        <div style='width:320px'>{{form_widget(contactForm.selection)}}</div>
    </div>

    <div class="row justify-content-center align-items-center text-center">
        {{ form_label(contactForm.message)}}
        <div style='width:320px'>{{form_widget(contactForm.message)}}</div>
    </div>

    <div class="text-center mt-4">
        {{ form_row(contactForm.submit) }}
    </div>

    {{form_end(contactForm)}}
</div>

{% endblock %}
